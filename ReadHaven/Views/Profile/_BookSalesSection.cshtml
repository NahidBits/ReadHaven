@* _BookSalesSection.cshtml *@
<div class="card shadow-sm border-0 rounded-4" id="bookSales">
    <div class="card-header bg-white border-bottom-0 d-flex justify-content-between align-items-center">
        <h5 class="mb-0 text-gradient fw-semibold">
            📊 Book Sales Summary
        </h5>
        <span class="text-muted small">Overview of books sold</span>
    </div>

    <!-- Scrollable Table Wrapper -->
    <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
        <table class="table table-hover align-middle text-center mb-0 bg-white">
            <thead class="sticky-top bg-light text-secondary small" style="z-index: 1;">
                <tr>
                    <th class="py-2" title="Cover">
                        <i class="bi bi-image fs-6 text-primary"></i>
                    </th>
                    <th class="py-2" title="Book Title">
                        <i class="bi bi-book fs-6 text-success"></i>
                    </th>
                    <th class="py-2" title="Quantity Sold">
                        <i class="bi bi-graph-up-arrow fs-6 text-warning"></i>
                    </th>
                </tr>
            </thead>
            <tbody id="salesTableBody">
                <!-- Sales data will be loaded here -->
            </tbody>
        </table>
    </div>
</div>
