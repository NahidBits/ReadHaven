@{
    ViewData["Title"] = "Profile Page";
}

<div class="container-fluid" style="height: 100vh; overflow: hidden;">
    <!-- Sidebar Toggle Button -->
    <button id="sidebarToggle" class="btn p-1 position-fixed shadow-sm"
            style="top: 60px; left: 10px; z-index: 1050; border: none; border-radius: 0.4rem; background-color: transparent;">
        <i class="bi bi-list fs-5 text-dark"></i>
    </button>

    <!-- Sidebar -->
    <div id="sidebar" class="bg-dark text-white"
         style="width: 200px; height: 100vh; position: fixed; top: 0; left: 0; transform: translateX(-250px); transition: transform 0.3s ease;">
        <div class="d-flex flex-column p-4 h-100">
            <h4 class="text-center mb-4">
                @(User.IsInRole("Admin") ? "Admin Panel" : "User Panel")
            </h4>

            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="#" class="nav-link text-white" onclick="loadProfileSection()">
                        <i class="bi bi-person-circle me-2"></i> Profile
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link text-white" onclick="loadMyOrderSection()">
                        <i class="bi bi-bag-check me-2"></i> My Orders
                    </a>
                </li>
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a href="#" class="nav-link text-white" onclick="loadUserOrderSection()">
                            <i class="bi bi-people-fill me-2"></i> User Orders
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link text-white" onclick="loadBookSalesSection()">
                            <i class="bi bi-bar-chart-line me-2"></i> Book Sales
                        </a>
                    </li>
                }
            </ul>

            <hr class="border-light mt-auto" />
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content" style="margin-left: 0; padding: 20px; width: 100%; transition: margin-left 0.3s ease; min-height: 100vh; padding-bottom: 60px;">
        <div id="mainContentArea">
            <!-- Sections will be loaded dynamically here -->
        </div>
    </div>
</div>

<script src="~/js/Profile/Index.js"></script>
