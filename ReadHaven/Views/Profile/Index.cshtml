@{
    ViewData["Title"] = "Book Details";
}

<div class="container mt-4">

    <!-- Profile Section -->
    <div id="profileSection" class="mb-4">
        <p><strong>Name:</strong> <span id="profileName"></span></p>
        <p><strong>Email:</strong> <span id="profileEmail"></span></p>
    </div>

    <!-- My Orders Table -->
    <div class="table-responsive">
        <table class="table table-bordered" id="myOrderTable">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Total Amount</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody id="myOrderTableBody">
                <!-- JS will render order rows here -->
            </tbody>
        </table>
    </div>
    @if (User.IsInRole("Admin"))
    {
        <!-- Admin View of All User Orders -->
        <div class="table-responsive">
            <table class="table table-bordered" id="userOrderTable">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody id="userOrderTableBody">
                    <!-- JS will render order rows here -->
                </tbody>
            </table>
        </div>
    }
</div>
    <script src="~/js/Profile/Index.js"></script>
