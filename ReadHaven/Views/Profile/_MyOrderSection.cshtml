<!-- Section Title -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-gradient mb-0 border-bottom pb-2 d-inline-block">
        📦 My Order
    </h2>
    <p class="text-muted mb-0 ms-3">Track all your recent purchases and monitor their delivery status.</p>
</div>

<!-- Table Card -->
<div class="card border-0 shadow-lg rounded-4" id="myOrder">
    <div class="card-body p-0">
        <div class="table-responsive" style="max-height: 470px; overflow-y: auto;">
            <table class="table table-hover align-middle text-center mb-0">
                <thead class="sticky-top bg-light border-bottom">
                <tr class="text-secondary fw-semibold">
                <th class="py-2 px-3 text-center" title="Order ID">
                    <i class="bi bi-card-list fs-5 text-primary"></i>
                </th>
                <th class="py-2 px-3 text-center" title="Date">
                    <i class="bi bi-calendar fs-5 text-success"></i>
                </th>
                <th class="py-2 px-3 text-center" title="Total">
                    <i class="bi bi-currency-dollar fs-5 text-warning"></i>
                </th>
                <th class="py-2 px-3 text-center" title="Status">
                    <i class="bi bi-check-circle fs-5 text-danger"></i>
                </th>
                </tr>
                </thead>
                <tbody id="myOrderTableBody" class="bg-white">
                    <!-- JS will inject rows here -->
                </tbody>
            </table>
        </div>
    </div>
</div>
