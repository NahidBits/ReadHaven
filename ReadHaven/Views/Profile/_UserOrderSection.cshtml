@* _UserOrderSection.cshtml (Updated Design) *@
<div class="card border-0 shadow-lg rounded-4" id="userOrder">
    <div class="card-body p-0">
        <div class="d-flex justify-content-between align-items-center px-4 pt-4 pb-2">
            <h5 class="fw-bold text-gradient mb-0 border-bottom pb-1 d-inline-block">
                📦 User Order
            </h5>
            <p class="text-muted mb-0 small">Manage and review orders placed by users.</p>
        </div>

        <div class="table-responsive px-3 pb-4" style="max-height: 480px; overflow-y: auto;">
            <table class="table table-sm table-hover align-middle text-center mb-0">
                <thead class="sticky-top bg-light border-bottom text-secondary fw-semibold" style="z-index: 1;">
                    <tr>
                        <th class="py-2 px-3 text-center" title="Order ID">
                            <i class="bi bi-card-list fs-5 text-primary"></i>
                        </th>
                        <th class="py-2 px-3 text-center" title="Date">
                            <i class="bi bi-calendar3 text-success fs-6"></i>
                        </th>
                        <th class="py-2 px-3 text-center" title="Total">
                            <i class="bi bi-currency-dollar text-warning fs-6"></i>
                        </th>
                        <th class="py-2 px-3 text-center" title="Action">
                            <i class="bi bi-tools text-info fs-6"></i>
                        </th>
                    </tr>
                </thead>
                <tbody id="userOrderTableBody" class="bg-white">
                    <!-- Orders will be dynamically injected here -->
                </tbody>
            </table>
        </div>
    </div>
</div>
