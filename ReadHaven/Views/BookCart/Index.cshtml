@model IEnumerable<ReadHaven.Models.Cart.CartItem>

@{
    ViewData["Title"] = "Your Cart";
}

<h2>Your Cart</h2>

@if (!Model.Any())
{
    <p>Your cart is empty!</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Book ID</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.BookId</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
    <!-- Example: A Checkout button (implement functionality as needed) -->
    <a href="@Url.Action("Checkout", "Cart")" class="btn btn-primary">Checkout</a>
}
