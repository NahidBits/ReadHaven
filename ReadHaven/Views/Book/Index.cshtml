@model IEnumerable<ReadHaven.Models.Book.Book>

@{
    ViewData["Title"] = "Book List";
}

<div class="text-center">
    <h1 class="display-4">Book List</h1>
    <p>Here are the available books</p>
</div>

@if (User.IsInRole("Admin")){
<!-- Create New Book Form -->
<div class="container mt-4">
    <h4>Create New Book</h4>
    <form method="post" asp-action="Create" class="mb-4">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="Title">Title</label>
                    <input type="text" class="form-control" id="Title" name="Title" required />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="Genre">Genre</label>
                    <input type="text" class="form-control" id="Genre" name="Genre" required />
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label for="Price">Price</label>
                    <input type="number" step="0.01" class="form-control" id="Price" name="Price" required />
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label for="Likes">Likes</label>
                    <input type="number" class="form-control" id="Likes" name="Likes" required />
                </div>
            </div>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Add Book</button>
    </form>
</div>
}

<!-- Book List -->
<div class="container mt-4">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Genre</th>
                <th>Price</th>
                <th>Likes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Genre</td>
                    <td>@book.Price.ToString("C")</td> <!-- Display price in currency format -->
                    <td>@book.Likes</td>
                    <td>
                        <!-- Details Button -->
                        <a href="@Url.Action("Details", "BookDetails", new { id = book.Id })" class="btn btn-info btn-sm">Details</a>
  
                        @if (User.IsInRole("Admin")){
                        <!-- Delete Button -->
                        <form action="@Url.Action("Delete", "Book", new { id = book.Id })" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this book?');">Delete</button>
                        </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
