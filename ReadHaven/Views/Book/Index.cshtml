@{
    ViewData["Title"] = "Book List";
}

@if (User.IsInRole("Admin"))
{
    <form method="post" enctype="multipart/form-data" class="book-form mb-4" id="create-book">
        <div class="row align-items-end">
            <div class="col-auto">
                <input type="text" class="form-control form-control-sm" name="Title" placeholder="Title" required />
            </div>
            <div class="col-auto">
                <input type="text" class="form-control form-control-sm" name="Genre" placeholder="Genre" required />
            </div>
            <div class="col-auto">
                <div class="input-group input-group-sm">
                    <span class="input-group-text">$</span>
                    <input type="number" step="0.01" class="form-control" name="Price" placeholder="Price" required />
                </div>
            </div>
            <div class="col-auto">
                <input type="file" class="form-control form-control-sm" name="Image" accept="image/*" required />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary btn-sm" title="Add Book">
                    <i class="bi bi-book-plus"></i> +
                </button>
            </div>
        </div>
    </form>
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-3">
            <input type="text" id="searchInput" class="form-control form-control-sm" placeholder="Search for books..." />
        </div>
        <div class="col-md-3">
            <input type="text" id="genreInput" class="form-control form-control-sm" placeholder="Enter genre..." />
        </div>
        <div class="col-md-2">
            <select id="priceSortSelect" class="form-control form-control-sm">
                <option value="">Sort by Price</option>
                <option value="1">Low to High</option>
                <option value="2">High to Low</option>
            </select>
        </div>
        <div class="col-md-2 d-flex align-items-center">
            <button onclick="applyFilters()" class="btn btn-primary btn-sm w-100" title="Apply Filters">
                <i class="bi bi-funnel"></i>
            </button>
        </div>
    </div>

    <div id="bookCardContainer" class="row g-4">
    </div>
</div>

<script src="~/js/Book/Index.js"></script>

<link href="~/css/Book/Index.css" rel="stylesheet" />
