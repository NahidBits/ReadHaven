@{
    ViewData["Title"] = "Password Reset Link Sent";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm border-0 bg-light">
            <div class="card-body p-5 text-center">
                <h3 class="text-dark mb-4">
                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                    Password Reset Link Sent
                </h3>

                <div class="alert alert-success shadow-sm" role="alert">
                    A password reset link has been sent to your email address.
                </div>

                <p class="text-muted">If you don’t see it in your inbox, please check your spam folder.</p>
                <p class="text-muted mb-4">Click the link in the email to reset your password securely.</p>

                <a href="@Url.Action("Index", "Auth")" class="btn btn-outline-secondary rounded-pill w-100">
                    <i class="bi bi-box-arrow-in-right"></i> Back to Login
                </a>
            </div>
        </div>
    </div>
</div>
