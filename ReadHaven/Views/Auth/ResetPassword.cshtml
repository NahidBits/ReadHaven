@model ReadHaven.Models.User.PasswordResetModel

@{
    ViewData["Title"] = "Reset Password";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm border-0 bg-light">
            <div class="card-body p-5">
                <h3 class="text-center text-dark mb-4">
                    <i class="bi bi-shield-lock-fill text-secondary me-2"></i>
                    Reset Password
                </h3>

                <form id="resetPasswordForm">
                    <!-- New Password -->
                    <div class="form-group mb-4">
                        <label for="NewPassword" class="visually-hidden">New Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-secondary text-white">
                                <i class="bi bi-lock-fill"></i>
                            </span>
                            <input type="password" id="NewPassword" name="NewPassword" class="form-control border-0 shadow-sm" placeholder="New Password" required />
                        </div>
                        <span id="newPasswordError" class="text-danger small"></span>
                    </div>

                    <!-- Confirm Password -->
                    <div class="form-group mb-4">
                        <label for="ConfirmPassword" class="visually-hidden">Confirm Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-secondary text-white">
                                <i class="bi bi-lock-fill"></i>
                            </span>
                            <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control border-0 shadow-sm" placeholder="Confirm Password" required />
                        </div>
                        <span id="confirmPasswordError" class="text-danger small"></span>
                    </div>

                    <input type="hidden" name="Token" value="@Model.Token" />

                    <button type="submit" class="btn btn-dark w-100 shadow-sm">
                        <i class="bi bi-arrow-repeat"></i> Reset Password
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/js/Auth/ResetPassword.js"></script>
