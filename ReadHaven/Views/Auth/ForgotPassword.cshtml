@{
    ViewData["Title"] = "Forgot Password";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm border-0 bg-light">
            <div class="card-body p-5">
                <h3 class="text-center text-dark mb-3">Forgot Password</h3>
                <p class="text-center text-muted mb-4">Enter your email to receive a reset link.</p>

                <form asp-action="ForgotPassword" method="post">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-info">
                            @ViewBag.Message
                        </div>
                    }

                    <!-- Email Input -->
                    <div class="form-group mb-4">
                        <label for="emailInput" class="visually-hidden">Email Address</label>
                        <div class="input-group">
                            <span class="input-group-text bg-secondary text-white">
                                <i class="bi bi-envelope-fill"></i>
                            </span>
                            <input type="email" id="emailInput" class="form-control border-0 shadow-sm" required placeholder="Enter your email" />
                        </div>
                    </div>

                    <button type="button" class="btn btn-dark w-100 shadow-sm" onclick="sendResetLink()">
                        Send Reset Link
                    </button>
                </form>

                <div class="text-center mt-4">
                    <p class="text-muted">Remembered your password?</p>
                    <a href="@Url.Action("Index", "Auth")" class="btn btn-outline-secondary rounded-pill w-100">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/Auth/ForgotPassword.js"></script>
