@model ReadHaven.Models.User.User

@{
    ViewData["Title"] = "Sign Up";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm border-0 bg-light">
            <div class="card-body p-5">
                <h3 class="text-center text-dark mb-4">
                    <i class="bi bi-person-plus-fill text-secondary me-2"></i> Sign Up
                </h3>

                <form asp-action="SignUp" method="post">
                    <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />

                    <!-- Username -->
                    <div class="form-group mb-4">
                        <label asp-for="Username" class="visually-hidden">Username</label>
                        <div class="input-group">
                            <span class="input-group-text bg-secondary text-white">
                                <i class="bi bi-person-fill"></i>
                            </span>
                            <input asp-for="Username" name="Username" class="form-control border-0 shadow-sm" placeholder="Username" />
                        </div>
                        <span asp-validation-for="Username" class="text-danger small"></span>
                    </div>

                    <!-- Email -->
                    <div class="form-group mb-4">
                        <label asp-for="Email" class="visually-hidden">Email</label>
                        <div class="input-group">
                            <span class="input-group-text bg-secondary text-white">
                                <i class="bi bi-envelope-fill"></i>
                            </span>
                            <input asp-for="Email" name="Email" class="form-control border-0 shadow-sm" placeholder="Email" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <!-- Password -->
                    <div class="form-group mb-4">
                        <label asp-for="PasswordHash" class="visually-hidden">Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-secondary text-white">
                                <i class="bi bi-lock-fill"></i>
                            </span>
                            <input asp-for="PasswordHash" name="PasswordHash" type="password" class="form-control border-0 shadow-sm" placeholder="Password" />
                        </div>
                        <span asp-validation-for="PasswordHash" class="text-danger small"></span>
                    </div>

                    <!-- Confirm Password -->
                    <div class="form-group mb-4">
                        <label class="visually-hidden">Confirm Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-secondary text-white">
                                <i class="bi bi-lock-fill"></i>
                            </span>
                            <input name="ConfirmPassword" type="password" class="form-control border-0 shadow-sm" placeholder="Confirm Password" />
                        </div>
                        <span class="text-danger small" id="confirmPasswordError"></span>
                    </div>

                    <button type="submit" class="btn btn-dark w-100 shadow-sm">
                        <i class="bi bi-person-check-fill"></i> Sign Up
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
