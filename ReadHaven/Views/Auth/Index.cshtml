@model ReadHaven.Models.User.User

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card shadow-sm border-0 bg-light">
            <div class="card-body p-5">
                <h2 class="text-center mb-4 text-dark">Welcome Back</h2>

                <form asp-action="Index" method="post">
                    <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />

                    <!-- Email Field -->
                    <div class="form-group mb-4">
                        <label asp-for="Email" class="form-label visually-hidden">Email</label>
                        <div class="input-group">
                            <span class="input-group-text bg-secondary text-white">
                                <i class="bi bi-envelope-fill"></i>
                            </span>
                            <input asp-for="Email" name="Email" class="form-control border-0 shadow-sm" placeholder="Email Address" required />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <!-- Password Field -->
                    <div class="form-group mb-4">
                        <label asp-for="PasswordHash" class="form-label visually-hidden">Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-secondary text-white">
                                <i class="bi bi-lock-fill"></i>
                            </span>
                            <input asp-for="PasswordHash" name="PasswordHash" type="password" class="form-control border-0 shadow-sm" placeholder="Password" required />
                        </div>
                        <span asp-validation-for="PasswordHash" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-dark w-100 mb-3 shadow-sm">Login</button>
                </form>

                <div class="container mt-4 text-center">
                    <p class="mb-3 text-muted">Don't have an account?</p>
                    <a href="/Auth/SignUp" class="btn btn-outline-secondary w-100 mb-3 rounded-pill">
                        <i class="bi bi-person-plus"></i> Sign Up
                    </a>

                    <p class="mb-3 text-muted">Forgot your password?</p>
                    <a href="@Url.Action("ForgotPassword", "Auth")" class="btn btn-link text-decoration-none text-secondary">
                        <i class="bi bi-question-circle"></i> Reset Password
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
