@using ReadHaven.Models.Enums

@{
    ViewData["Title"] = "Book Details";
}

<div class="container mt-5" id="book-details-container">
    <h2 class="mb-4">📚 Book Details</h2>

    @if (User.IsInRole("Admin"))
    {
        <!-- Admin Inline Book Update Form -->
        <div class="bg-light p-4 rounded shadow-sm mb-4">
            <h5 class="mb-3">Edit Book</h5>
            <form id="bookUpdateForm" enctype="multipart/form-data" method="post" class="row g-2 align-items-end">
                <div class="col-md-3">
                    <input type="text" class="form-control form-control-sm" id="Title" name="Title" placeholder="Title" required />
                </div>
                <div class="col-md-2">
                    <input type="text" class="form-control form-control-sm" id="Genre" name="Genre" placeholder="Genre" required />
                </div>
                <div class="col-md-2">
                    <div class="input-group input-group-sm">
                        <span class="input-group-text">$</span>
                        <input type="number" step="0.01" class="form-control" id="Price" name="Price" placeholder="Price" required />
                    </div>
                </div>
                <div class="col-md-3">
                    <input type="file" class="form-control form-control-sm" id="Image" name="Image" accept="image/*" />
                </div>
                <div class="col-md-auto">
                    <input type="hidden" name="Id" id="bookIdField" />
                    <button type="button" class="btn btn-success btn-sm" onclick="saveBookUpdate()">
                        <i class="bi bi-save me-1"></i> Save
                    </button>
                </div>
            </form>
        </div>
    }

    <!-- Book Display Section -->
    <div class="row g-4 align-items-start">
        <!-- Image -->
        <div class="col-md-4 text-center">
            <img id="bookImage" src="/uploads/book/Default_image.webp" alt="Book Image" class="img-fluid rounded shadow-sm" style="max-height: 300px;" />
        </div>

        <!-- Details -->
        <div class="col-md-8">
            <div class="mb-2"><strong>Title:</strong> <span id="ReadTitle"></span></div>
            <div class="mb-2"><strong>Genre:</strong> <span id="ReadGenre"></span></div>
            <div class="mb-2"><strong>Price:</strong> <span id="ReadPrice"></span></div>

            <a href="@Url.Action("Index", "Book")" class="btn btn-outline-primary mt-3">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <hr class="my-5" />

    <!-- Review Carousel -->
    <div id="review-carousel-section">
        <h4 class="mb-3">User Reviews</h4>
        <div class="d-flex align-items-center justify-content-between">
            <button class="btn btn-outline-secondary btn-sm" onclick="previousReview()">
                <i class="bi bi-chevron-left"></i>
            </button>

            <div id="reviewDisplay" class="flex-grow-1 px-3 text-center">
                <span class="text-muted">Loading reviews...</span>
            </div>

            <button class="btn btn-outline-secondary btn-sm" onclick="nextReview()">
                <i class="bi bi-chevron-right"></i>
            </button>
        </div>
    </div>

    <hr class="my-5" />

    <!-- Review Submission Section -->
    <div id="review-section">
        <button class="btn btn-secondary btn-lg review-button">
            Write a Review
        </button>
    </div>
</div>

<script src="~/js/Book/Details.js"></script>
