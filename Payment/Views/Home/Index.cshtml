@{
    ViewData["Title"] = "Payment Page";
}

<h1>OTP Email Validation</h1>

<div id="otp-section">
    <!-- Email Input Section -->
    <div id="email-section">
        <label for="email">Enter your email:</label>
        <input type="email" id="email" placeholder="Enter your email" required />
        <button id="send-otp-btn">Send OTP</button>
    </div>

    <!-- OTP Input Section -->
    <div id="otp-input-section" style="display: none;">
        <label for="otp">Enter OTP:</label>
        <input type="hidden" id="hidenEmail" required />
        <input type="text" id="otp" placeholder="Enter OTP" required />
        <button id="validate-otp-btn">Validate OTP</button>
    </div>

    <!-- Message Section -->
    <div id="message-section">
        <p id="message"></p>
    </div>
</div>

<script src="~/js/Home/Index.js"></script>